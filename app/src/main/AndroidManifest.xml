            android:name=".ui.instructions.instructionspage"
            android:exported="true" />
        <activity
            android:name=".ui.bookingpage.bookingpage"
            android:exported="true" />
        <activity
            android:name=".ui.welcomepage.welcomepage"
            android:exported="true" />
        <activity
            android:name=".ui.faq.FAQPage"
            android:exported="true" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.profile.ProfileActivity"
            android:exported="true" />
    </application>

</manifest>